      <?oxy_custom_start type="oxy_content_highlight" color="140,255,140"?>string<?oxy_custom_end?>,
        <glossterm>required</glossterm><?oxy_custom_start type="oxy_content_highlight" color="140,255,140"?>
      with fixed value <code>"segment"</code><?oxy_custom_end?></member>
    <member>-
        <?oxy_custom_start type="oxy_content_highlight" color="140,255,140"?><code>"canResegment"</code>, a<?oxy_custom_end?>
      <olink targetdoc="../../attributes/canResegment.xml" targetptr="canResegment"
          ><code>canResegment</code></olink>
      <?oxy_custom_start type="oxy_content_highlight" color="140,255,140"?>string with value
        <code>"yes"</code> or <code>"no"</code><?oxy_custom_end?>, <glossterm>optional</glossterm>
      <?oxy_custom_start type="oxy_content_highlight" color="140,255,140"?>with default value
        <code>"yes"</code></member><?oxy_custom_end?>
    <member>-
        <?oxy_custom_start type="oxy_content_highlight" color="140,255,140"?><code>"state"</code>, a
        <olink targetdoc="../../attributes/state.xml" targetptr="state"><code>state</code></olink>
      string of value <code>"initial"</code>, <code>"translated"</code>, <code>"reviewed"</code>, or
        <code>"final"</code>, <glossterm>optional</glossterm> with default value
        <code>"initial"</code><?oxy_custom_end?></member>
    <member>-
        <?oxy_custom_start type="oxy_content_highlight" color="140,255,140"?><code>"subState"</code>,
